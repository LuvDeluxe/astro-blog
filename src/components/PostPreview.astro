---
export interface Props {
    title: string;
    href: string;
    imageUrl: string;
    excerpt: string;
}

const { title, href, imageUrl, excerpt } = Astro.props;
---
<!--
    This is the main container for the card. -->
    <a href={href} class="block bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300">
        <!-- The posts image -->
         <img src={imageUrl} alt={`Featured image for ${title}`} class="w-full h-48 object-cover"} />
         <!-- A container for the text content with padding -->
          <div class="p-6">
            <!-- Post title -->
             <h3 class="text-2xl font-bold font-sans mb-2 leading-tight"> {title} </h3>
             <!-- Post Excerpt -->
              <p class="text-gray-600 font-serif"> {excerpt} </p>
          </div>
    </a>
