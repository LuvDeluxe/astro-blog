---
/*
=================================================================================
  FILE: src/layouts/Layout.astro
  PURPOSE: This is the master template for the entire website. It defines the
  shared HTML structure, including the <head>, header, navigation, and footer.
  All other pages use this layout to ensure a consistent look and feel.
  The <slot /> component is a placeholder where the unique content of each
  individual page is injected.
=================================================================================
*/
interface Props {
    title: string;
}
const { title } = Astro.props;

const currentYear = new Date().getFullYear();
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="A beautiful blog for my best friend" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title} |  Ms.Aimee Laoshi's Blog </title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&family=Lora:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
    </head>
    <body>
        <header class="py-8 px-4 md:px-8 max-w-4xl mx-auto">
            <nav class="flex justify-between items-center">
                <a href="/" class="text-2xl font-bold font-sans tracking-tight hover:text-purple-700 transition-colors">Her Blog</a>
                <div>
                    <a href="/" class="text-lg font-sans hover:text-purple-700 transition-colors mr-6">Home</a>
                    <a href="/about" class="text-lg font-sans hover:text-purple-700 transition-colors mr-6">About Me</a>
                    <a href="/blog" class="text-lg font-sans hover:text-purple-700 transition-colors mr-6">Blog</a>
                </div>
            </nav>
        </header>

        <main class="px-4 md:px-8 max-w-4xl mx-auto">
            <slot />
        </main>

        <footer class="w-full mt-16 py-8 bg-gray-100 border-t">
            <div class="max-w-4xl mx-auto text-center text-gray-500">
                <p>&copy; {currentYear} Ms.Aimee Laoshi. All Rights Reserved.</p>
				<p class="text-sm mt-2">Built with ❤️ using Astro & Contentful</p>
            </div>
        </footer>

        <style is:global>
            body {
                font-family: 'Lora', serif;
            }
            h1, h2, h3, h4, h5, h6, a {
                font-family: 'Inter', sans-serif;
            }
        </style>
    </body>
</html>
