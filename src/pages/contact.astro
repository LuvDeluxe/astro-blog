<!--
 // =================================================================================
// FILE: src/pages/contact.astro
// PURPOSE: A new page with a contact form that submits to Formspree.
// =================================================================================
-->

---
import Layout from "../layouts/Layout.astro";
---
<Layout title="Contact Me">
    <!-- Page Header -->
     <div class="text-center border-b pb-8 mb-12">
        <h1 class="text-4xl font-bold tracking-tight">Contact Me</h1>
        <p class="mt-2 text-lg text-gray-500"> Have a question or want to say hello ? Drop me a line! </p>
     </div>

     <!-- Styled container card -->
     <div class="bg-white rounded-lg shadow-xl p-8 md:p-12 border-t-4 border-purple-600">
        <!-- Form tag points to unique Formspree -->
        <form action="" method="POST" class="space-y-6">

            <!-- Tell Formspree where to redirect on success -->
            <input type="hidden" name="_next" value="/success">

            <!-- Name field -->
            <div>
                <label for="name" class="block text-lg font-medium text-gray-700 mb-2">Your Name</label>
                <input type="text" name="name" id="name" required class="block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-purple-500 focus:border-purple-500">
            </div>

            <!-- Email field -->
            <div>
                <label for="email" class="block text-lg font-medium text-gray-700 mb-2">Your Email</label>
                <input type="email" name="email" id="email" required class="block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-purple-500 focus:border-purple-500">
            </div>

            <!-- Message field -->
             <div>
                <label for="message" class="block text-lg font-medium text-gray-700 mb-2">Message</label>
                <textarea name="message" id="message" rows="6" required class="block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-purple-500 focus:border-purple-500"></textarea>
             </div>

             <!-- Submit button -->
             <div>
                <button type="submit" class="w-full bg-purple-600 text-white font-bold py-6 px-6 rounded-lg hover:bg-purple-700 transition-colors text-lg">
                    Send message
                </button>
             </div>
        </form>
     </div>
</Layout>
